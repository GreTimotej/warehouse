@model web.Models.Evidence

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/itemsite.css" asp-append-version="true" />

<h1>Create</h1>
<div class="border rounded-3 p-4 shadow">
    <h4>Evidence</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label class="control-label">Item</label>
                    <select asp-for="ItemID" class ="form-control" asp-items="ViewBag.ItemID"></select>
                </div>
                <div class="form-group mb-2">
                    <label class="control-label">Warehouse</label>
                    <select asp-for="WarehouseID" class ="form-control" asp-items="ViewBag.WarehouseID"></select>
                </div>
                <div class="form-group mb-2">
                    <label class="control-label">Customer</label>
                    <select asp-for="CustomerID" class ="form-control" asp-items="ViewBag.CustomerID"></select>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Out" class="control-label"></label>
                    <input asp-for="Out" class="form-control" />
                    <span asp-validation-for="Out" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>




</div>