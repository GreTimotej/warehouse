@model web.Models.Warehouse

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/itemsite.css" asp-append-version="true" />

<h1>Edit</h1>
<div class="border rounded-3 p-4 shadow">
    <h4>Warehouse</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group mb-2">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="ZIP" class="control-label"></label>
                    <input asp-for="ZIP" class="form-control" />
                    <span asp-validation-for="ZIP" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="no-decor btn border border-primary btn-default">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>